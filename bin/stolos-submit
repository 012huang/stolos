#!/usr/bin/env python
from stolos import argparse_shared as at
from stolos import api
from stolos import log


def main(ns):
    api.initialize()
    if ns.readd:
        api.readd_subtask(ns.app_name, ns.job_id)
    else:
        rv = api.maybe_add_subtask(ns.app_name, ns.job_id)
        if not rv:
            log.warn("Did not add subtask")


build_arg_parser = at.build_arg_parser([
    at.add_argument('--job_id', required=True),
    at.app_name(required=True, choices=list(api.get_tasks_config().keys())),
    at.zookeeper_hosts,
    at.add_argument(
        '--readd', action='store_true', help=(
            "Try to add this to the queue if it isn't already.  Assume we've"
            " tried to add the task already")),
])


if __name__ == '__main__':
    NS = build_arg_parser().parse_args()
    main(NS)
